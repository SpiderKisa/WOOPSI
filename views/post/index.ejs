<%- layout('/layouts/boilerplate') %>
    <div class="row">
        <div class="col-3"></div>
        <div class="col">
            <% for (let post of posts) {%>
                <div class="card mb-3">
                    <a href="posts/<%= post._id %>" class="post-link">
                        <img src="<%= post.image %>" class="card-img-top" alt="">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=post.title%>
                            </h5>
                            <p class="card-text">
                                <%= post.text.slice(0,150) + '...' %>
                            </p>
                        </div>
                    </a>
                </div>
                <% } %>
        </div>
        <div class="col-3"></div>
    </div>