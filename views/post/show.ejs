<%- layout('/layouts/boilerplate') %>
    <div class="row mb-3">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card mb-3">
                <img src="<%= post.image%> " class="card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= post.title %>
                    </h5>
                    <p class="card-text">
                        <%= post.text %>
                    </p>
                    <div class="row row-cols-lg-auto g-3 align-items-center">
                        <div class="col-12">
                            <a href="/posts/<%= post._id %>/edit" class="btn btn-info">Edit</a>
                        </div>
                        <div class="col-12">
                            <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--COMMENTS AREA -->
            <form action="/posts/<%= post._id %>/comments" method="POST" class="needs-validation mb-3" novalidate>
                <div class="mb-3">
                    <label for="text" class="form-label">Comment</label>
                    <textarea name="comment[text]" class="form-control" id="text" rows="5" required></textarea>
                    <div class="invalid-feedback">
                        Comment can not be blank
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Send</button>
            </form>
            <div class="mb-3">
                <% for (comment of post.comments){%>
                    <div class="card mb-3">
                        <div class="card-body">
                            <p class="card-text">
                                <%= comment.text %>
                            </p>
                            <form action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=DELETE"
                                method="POST">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
        <div class="col-3"></div>
    </div>